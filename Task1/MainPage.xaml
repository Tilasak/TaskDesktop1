<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Task1.MainPage">

    <Grid>
        <CollectionView Grid.Row="0" ItemsSource="{Binding Notes}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BackgroundColor="DarkOrange" CornerRadius="5">
                        <StackLayout>
                            <Label Text="{Binding Title}" FontAttributes="Bold" />
                            <Label Text="{Binding Details}" />
                            <Label Text="{Binding CreationDateTime}" HorizontalOptions="End" FontSize="12" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Добавить задачу" 
                BackgroundColor="DarkOrange" 
                Clicked="OnAddTaskClicked"
                HorizontalOptions="End"
                VerticalOptions="End" 
                Margin="20" />
    </Grid>

</ContentPage>
